#!/bin/bash
echo Doing quick tests
echo =================
echo The quick tests skip any tests that rely on Paramiko as these take a long time
echo due to ssh connection setup and encrypt/decrypt
if /usr/bin/test -d tests; then
    export PYTHONPATH=`pwd`
    rm -f .coverage
    nosetests  -v --cover-package=actuator --with-coverage --cover-erase `ls tests/*tests.py|egrep -v "(ansible|paramiko|execution)"`
else
    echo "THIS MUST BE RUN IN THE DIRECTORY THAT CONTAINS THE 'tests' DIRECTORY"
fi
